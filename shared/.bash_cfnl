#!/bin/bash

# CloudFormation Launcher

# Symlink
if [ ! -h "/usr/local/bin/cfnl" ]; then
   ln -s "/Users/levon/Development/github/bonusbits/cfn_launcher/cfn-launcher.sh" /usr/local/bin/cfnl
fi

# Task Aliases
## Create Stack
alias cfnlc="cfnl -f "
## Updated Stack
alias cfnlu="cfnl -u -f "
## Delete Stack
alias cfnld="cfnl -d -f "

# Pre-Configured Stacks

## DEV
### vpc
dev_vpc_uw2="$HOME/aws/cfnl_configs/account1-uswest2-dev-vpc.yml"
alias cf-create-uswest2-account1-dev-vpc="aws-set-bbdev-public && cfnlc $dev_vpc_uw2"
alias cf-update-uswest2-account1-dev-vpc="aws-set-bbdev-public && cfnlu $dev_vpc_uw2"
alias cf-delete-uswest2-account1-dev-vpc="aws-set-bbdev-public && cfnld $dev_vpc_uw2"
### web
dev_web_uw2="$HOME/aws/cfnl_configs/account1-uswest2-dev-web.yml"
alias cf-create-uswest2-account1-dev-web="aws-set-bbdev-public && cfnlc $dev_web_uw2"
alias cf-update-uswest2-account1-dev-web="aws-set-bbdev-public && cfnlu $dev_web_uw2"
alias cf-delete-uswest2-account1-dev-web="aws-set-bbdev-public && cfnld $dev_web_uw2"

## PRD
### vpc
prd_vpc_uw2="$HOME/aws/cfnl_configs/account1-uswest2-dev-vpc.yml"
alias cf-create-uswest2-account1-prd-vpc="aws-set-bbdev-public && cfnlc $prd_vpc_uw2"
alias cf-update-uswest2-account1-prd-vpc="aws-set-bbdev-public && cfnlu $prd_vpc_uw2"
alias cf-delete-uswest2-account1-prd-vpc="aws-set-bbdev-public && cfnld $prd_vpc_uw2"
### web
prd_web_uw2="$HOME/aws/cfnl_configs/account1-uswest2-dev-web.yml"
alias cf-create-uswest2-account1-prd-web="aws-set-bbdev-public && cfnlc $prd_web_uw2"
alias cf-update-uswest2-account1-prd-web="aws-set-bbdev-public && cfnlu $prd_web_uw2"
alias cf-delete-uswest2-account1-prd-web="aws-set-bbdev-public && cfnld $prd_web_uw2"
